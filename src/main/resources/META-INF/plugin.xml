
<idea-plugin>

    <id>com.yognevoy.bx-controller-navigator</id>
    <name>Bitrix Controller Navigator</name>
    <vendor url="https://yognevoy.com">Yognevoy</vendor>

    <description><![CDATA[
    Navigate to Bitrix controller files from JS code.
  ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>JavaScript</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.yognevoy.bxcontrollernavigator.settings.Settings"/>
        <projectConfigurable
                parentId="tools"
                instance="com.yognevoy.bxcontrollernavigator.settings.SettingsConfigurable"
                id="com.yognevoy.bxcontrollernavigator.settings.SettingsConfigurable"
                displayName="BX Controller Navigator"/>
        <psi.referenceContributor language="JavaScript" implementation="com.yognevoy.bxcontrollernavigator.BXControllerReferenceContributor"/>
        <completion.contributor language="JavaScript" implementationClass="com.yognevoy.bxcontrollernavigator.completion.BXControllerCompletionContributor"/>
    </extensions>
</idea-plugin>
